{
  "name": "frontless",
  "version": "0.0.1-prealpha",
  "description": "Frontless - Isomorhic RiotJS Stack",
  "repository": "https://github.com/nesterow/frontless",
  "main": "src/lib/index.js",
  "author": "Anton Nesterov",
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "start": "node_modules/.bin/nodemon --ext js,tag --exec \"npm run build-dev && node dist/server.js\"",
    "build-dev": "webpack --mode development --config config/webpack.config.js",
    "build": "webpack --mode production --config config/webpack.config.js",
    "lint": "eslint ./src --fix",
    "test": "jest"
  },
  "keywords": [
    "riot",
    "roitjs",
    "ssr",
    "isomorhic",
    "webpack"
  ],
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "7.1.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-module-resolver": "^3.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.15.3",
    "eslint-config-google": "^0.12.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.10",
    "post-compile-webpack-plugin": "^0.1.2",
    "riot-hot-reload": "1.0.0",
    "riot-jest-transformer": "^2.0.0",
    "riot-tag-loader": "^2.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@feathersjs/client": "^3.7.8",
    "@feathersjs/express": "^1.3.1",
    "@feathersjs/feathers": "^3.3.1",
    "axios": "^0.18.0",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "riot": "^3.13.2",
    "riot-compiler": "^3.6.0",
    "socket.io": "^2.2.0",
    "spectre.css": "^0.5.8",
    "turbolinks": "^5.2.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "dist/*"
    ]
  }
}
